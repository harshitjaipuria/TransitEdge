generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
  engineType = "library"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  ID           Int       @id @default(autoincrement())
  name         String    @db.VarChar(100)
  role         Int       @default(0)
  phone_number String    @unique(map: "phone_number") @db.VarChar(15)
  email_id     String    @unique(map: "email_id") @db.VarChar(100)
  password     String    @db.VarChar(255)
  company_name String?   @db.VarChar(150)
  office_type  String    @db.VarChar(50)
  branch       String?   @db.VarChar(100)
  created_at   DateTime? @default(now()) @db.Timestamp(0)
}

model owner_master {
  sn_no        Int     @id @default(autoincrement()) @map("sn.no")
  user_id      String? @db.VarChar(100)
  Owner_name   String? @db.VarChar(100)
  father_name  String? @db.VarChar(100)
  email        String? @db.VarChar(100)
  phone_number BigInt?
  pan_number   String? @db.VarChar(100)
  country      String? @db.VarChar(50)
  address      String? @db.VarChar(255)
  city         String? @db.VarChar(100)
  postal_code  Int?
  tags         String? @db.VarChar(100)
}

model DriverMaster {
  ID            Int     @id @default(autoincrement())
  UserID        String? @default("None") @db.VarChar(50)
  DriverName    String? @default("None") @db.VarChar(100)
  FathersName   String? @default("None") @db.VarChar(100)
  Email         String? @default("None") @db.VarChar(100)
  MobileNumber  BigInt?
  PhoneNumber   BigInt?
  Country       String? @default("None") @db.VarChar(50)
  Address       String? @default("None") @db.VarChar(255)
  City          String? @default("None") @db.VarChar(50)
  PostalCode    Int?
  LicenseNumber String? @default("None") @db.VarChar(20)
  IssuedBy      String? @default("None") @db.VarChar(50)
  LicenseDate   String? @default("None") @db.VarChar(50)
  DriverTag     String? @default("None") @db.VarChar(50)
}

model broker_master {
  id           Int     @id @default(autoincrement())
  user_id      Int?
  broker_name  String? @default("None") @db.VarChar(100)
  fathers_name String? @default("None") @db.VarChar(100)
  email        String? @default("None") @db.VarChar(255)
  phone_number BigInt?
  pan_number   String? @default("None") @db.VarChar(50)
  country      String? @default("None") @db.VarChar(15)
  address      String? @default("None") @db.VarChar(255)
  city         String? @default("None") @db.VarChar(50)
  postal_code  Int?
}

model station {
  id             Int       @id @default(autoincrement())
  station_code   String?   @db.VarChar(100)
  station_name   String?   @db.VarChar(100)
  address        String?   @db.VarChar(255)
  city           String?   @db.VarChar(50)
  zip_code       Int?
  country        String?   @default("India") @db.VarChar(50)
  display_name   String?   @db.VarChar(100)
  telephone      Int?
  email_id       String?   @db.VarChar(100)
  contact_person String?   @db.VarChar(50)
  activity_1     Int?      @default(0)
  activity_2     Int?      @default(0)
  activity_3     Int?      @default(0)
  activity_4     Int?      @default(0)
  activity_5     Int?      @default(0)
  activity_6     Int?      @default(0)
  created_at     DateTime? @default(now()) @db.Timestamp(0)
}
